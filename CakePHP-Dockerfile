FROM debian:stretch

RUN apt-get update && apt-get install -y apache2 curl unzip php7.0 php7.0-intl php7.0-mbstring php7.0-xml \
&& rm -rf /var/lib/apt/lists/*

RUN curl -s https://getcomposer.org/installer | php
&& mv composer.phar /usr/local/bin/composer

RUN a2enmod rewrite

CMD ["-D", "FOREGROUND"]
ENTRYPOINT ["apachectl"]
