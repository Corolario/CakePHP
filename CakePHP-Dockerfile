FROM debian:stretch

RUN apt-get update && apt-get install -y apache2 curl unzip php7.0 php7.0-intl php7.0-mbstring php7.0-xml php7.0-mysql \
&& rm -rf /var/lib/apt/lists/*

RUN curl -s https://getcomposer.org/installer | php \
&& mv composer.phar /usr/local/bin/composer

WORKDIR /var/www/
RUN composer create-project --prefer-dist cakephp/app

ADD https://raw.githubusercontent.com/Corolario/CakePHP/master/cakephp.conf /etc/apache2/sites-available/

RUN a2dissite 000-default.conf \
&& a2enmod rewrite \
&& a2ensite cakephp

CMD ["-D", "FOREGROUND"]
ENTRYPOINT ["apachectl"]
